# PlayMatatu Environment Configuration

# Application Settings
APP_ENV=production
APP_PORT=8000
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://playmatatu:your_password@localhost:5432/playmatatu?sslmode=disable

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# Game Settings
GAME_EXPIRY_MINUTES=10
DISCONNECT_GRACE_PERIOD_SECONDS=120
NO_SHOW_FEE_PERCENTAGE=5
COMMISSION_PERCENTAGE=10
MIN_STAKE_AMOUNT=1000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_TIMEOUT_MINUTES=30
API_RATE_LIMIT=100

# Mobile Money Configuration (Replace with actual credentials)
MOMO_API_KEY=your-momo-api-key
MOMO_API_SECRET=your-momo-secret
MOMO_COLLECTION_URL=https://api.momo.company.com/collection
MOMO_DISBURSEMENT_URL=https://api.momo.company.com/disbursement

# USSD Configuration (Replace with actual credentials)
USSD_SHORTCODE=*123*1#
USSD_GATEWAY_URL=https://ussd.internal.company.com
USSD_API_KEY=your-ussd-api-key
USSD_API_SECRET=your-ussd-api-secret

# SMS Configuration (Africa's Talking)
SMS_SENDER_ID=PlayMatatu
AFRICAS_TALKING_USERNAME=your-username
AFRICAS_TALKING_API_KEY=your-api-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# Development overrides (comment out in production)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/playmatatu_dev?sslmode=disable
# DEBUG=true
# LOG_LEVEL=debug